  <script>
    function updateTime() {
      const now = new Date();
      const phTime = now.toLocaleString('en-PH', { timeZone: 'Asia/Manila', hour: 'numeric', minute: 'numeric', hour12: true });
      document.getElementById('local-time').textContent = 'Local Time: ' + phTime;
    }
    updateTime();
    setInterval(updateTime, 60000);
  </script>
